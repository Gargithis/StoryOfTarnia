@using static StoryOfTarniaWebApp.Models.Tiers
@model Feat

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row-pb-2">
			<h2 class="text-primary">Create Feat</h2>
			<hr/>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Tier"></label>
			@Html.DropDownListFor(
							model => model.Tier,
							Html.GetEnumSelectList<TierType>(),
							"Select a Tier",
							new { @class = "form-control" }
							)
			<span asp-validation-for="Tier" class="text-bg-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for ="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-bg-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-bg-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Prerequisite"></label>
			<input asp-for="Prerequisite" class="form-control" />
			<span asp-validation-for="Prerequisite" class="text-bg-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control" > Create </button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Feats" asp-action="Index" class="btn btn-outline-secondary form-control" >
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>

